<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.UbahBarangActivity">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="vertical"
        android:fitsSystemWindows="false">
    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_ubah_gambar"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            app:srcCompat="@drawable/ic_insert_drive_file_black_24dp" />

        <EditText
            android:layout_marginTop="20dp"
            android:id="@+id/et_ubah_nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nama Barang"
            android:inputType="text" />

        <EditText
            android:id="@+id/et_ubah_dekripsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Deskripsi"
            android:inputType="text|textMultiLine"
            />


        <EditText
            android:id="@+id/et_ubah_harga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Harga"
            android:inputType="number" />
        <LinearLayout
            android:layout_marginTop="3dp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="Kategori"
                android:textSize="15sp"/>
        <TextView
            android:textSize="15sp"
            android:id="@+id/tv_ubah_spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        </LinearLayout>
        <Button
            android:layout_marginTop="20dp"
            android:background="@drawable/button_round2"
            android:textColor="#ffff"
            android:id="@+id/btn_ubah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ubah" />
    </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>